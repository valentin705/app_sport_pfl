{% extends 'base.html.twig' %}

{% block title %} Seance : {{ seance.name }} {% endblock %}

{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="{{ asset('css/show_workout.css') }}">
{% endblock %}
{% block body %}

{% set seanceUserPicture = asset('uploads/avatars/' ~ seance.user.pictureFile) %}
{% set seancePicture = asset('uploads/picturesSeances/' ~ seance.pictureFile) %}

<div class="container mt-6">
    <div class="row">
        <div class="col-3">
            <div class="card p-4 mb-3">
                <div class="card-body d-flex flex-column align-items-center ">
                    <div>
                        <img src="{{ seanceUserPicture }}" alt="" class="avatar">
                        <h4 class="mt-2 text-center">{{ seance.user.username }}</h4>
                    </div>
                    <p class="description description-5 text-center">{{ seance.user.description }}</p>
                    <div>
                        <a href="{{ path('user_profil_visited', {'id': seance.user.id}) }}">Profil du créateur</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-9">
            <h2 class="name-seance" style="text-align: center;">{{ seance.name }}</h2>
            <div class="seance-card-parent" style="background-image: url('{{ seancePicture }}');">
                <div class="card p-4 mb-3 seance-card">
                    <p class="date mb-3">{{ seance.createAt | date('d/m/Y') }}</p>
                    <div class="d-flex justify-content-between">
                        <div style="flex: auto;">
                            <h5>Description :</h5>
                            <p class="px-3 description description-5"> {{ seance.description }} </p>
                        </div>
                        <div class="mx-3" style="flex: none;">
                            <h6>Categories :</h6>
                            <ul class="list">
                                {% for categorie in seance.categories %}
                                <li>{{ categorie.name }}</li>
                                {% endfor %}
                            </ul>
                        </div>
                        <div class="d-flex flex-column align-items-end">
                            <div class="d-flex flex-column align-items-end">
                                <div class="d-flex align-items-center">
                                    <div class="p-2">
                                        <a href="{{ path('app_likes', {'id': seance.id})}}">
                                            {% include "components/_likesDislikes.html.twig" %}
                                        </a>
                                    </div>
                                    <p class="m-0">{{ seance.likes | length}}</p>
                                </div>
                                <div class="d-flex align-items-center">
                                    <div class="p-2">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                            fill="currentColor" class="bi bi-chat" viewBox="0 0 16 16">
                                            <path
                                                d="M2.678 11.894a1 1 0 0 1 .287.801 10.97 10.97 0 0 1-.398 2c1.395-.323 2.247-.697 2.634-.893a1 1 0 0 1 .71-.074A8.06 8.06 0 0 0 8 14c3.996 0 7-2.807 7-6 0-3.192-3.004-6-7-6S1 4.808 1 8c0 1.468.617 2.83 1.678 3.894zm-.493 3.905a21.682 21.682 0 0 1-.713.129c-.2.032-.352-.176-.273-.362a9.68 9.68 0 0 0 .244-.637l.003-.01c.248-.72.45-1.548.524-2.319C.743 11.37 0 9.76 0 8c0-3.866 3.582-7 8-7s8 3.134 8 7-3.582 7-8 7a9.06 9.06 0 0 1-2.347-.306c-.52.263-1.639.742-3.468 1.105z" />
                                        </svg>
                                    </div>
                                    <p class="m-0">{{ seance.comments | length}} </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% if seance.exercices is empty %}
            <div class="card p-4 mb-3">
                <h2 style="text-align: center;">Cette séance n'a pas encore d'exercices</h2>
            </div>
            {% else %}
            {% for exercice in seance.exercices %}
            {% set exercicePicture = asset('uploads/picturesExercices/' ~ exercice.pictureFile) %}
            <div class="card p-4 mb-3">
                <div class="row mb-3">
                    <div class="d-flex justify-content-between">
                        <div class="d-flex">
                            <div>
                                <img class="seance-picture" src="{{ exercicePicture }}" alt="">
                            </div>
                            <div class="px-3">
                                <h5 class="px-3" style="text-align: center;">{{ exercice.name }}</h5>
                                <p class="description description-5"> {{ exercice.description }} </p>
                            </div>
                        </div>
                        <ul class="list" style="white-space: nowrap;">
                            <li>Series : {{ exercice.serie }}</li>
                            {% if exercice.repetition %}
                            <li>Repetitions : {{ exercice.repetition }}</li>
                            {% endif %}
                            {% if exercice.temps %}
                            <li>Temps : {{ exercice.temps }}</li>
                            {% endif %}
                            {% if exercice.recuperation %}
                            <li>Recuperation : {{ exercice.recuperation}}</li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
            </div>
            {% endfor %}
            {% endif %}
            <div class="d-flex m-3 align-items-center justify-content-between">
                <div class="w-100 mx-2 my-3">
                    {{ form_start(formComment) }}
                    {{ form_row(formComment.contenu) }}
                </div>
                <div class="">
                    <button type="submit" class="btn p-0">
                        <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor"
                            class="bi bi-arrow-right-circle" viewBox="0 0 16 16">
                            <path fill-rule="evenodd"
                                d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8zm15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM4.5 7.5a.5.5 0 0 0 0 1h5.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5H4.5z" />
                        </svg>
                    </button>
                </div>
                {{ form_end(formComment) }}
            </div>

            {% for comment in seance.comments %}
            <div class="d-flex mb-3 justify-content-between">
                <img class="avatar avatar-2" src="{{ asset('uploads/avatars/' ~ comment.user.pictureFile) }}" alt="">
                <div class="w-100">
                    <div class="card comment-card mx-2 p-3">
                        <div class="row">
                            <div class="d-flex justify-content-between">
                                <h6 class="mx-3">{{ comment.user.username }}</h6>
                                <p class="date">{{ comment.createdAt | date('d/m/Y H:i') }}</p>
                            </div>
                        </div>
                        <p class="description">{{ comment.contenu }}</p>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</div>


{% endblock %}
{% block javascripts %}
{{ parent() }}
<script src="{{ asset('js/show_workout.js') }}"></script>
{% endblock %}