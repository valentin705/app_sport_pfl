            <div class="d-flex justify-content-end">
                <a href="{{ path('update_exercice', {'id': exercice.id}) }}"
                    class="btn btn-info btn-sm">
                    Update l'exercice
                </a>
                <a href="{{ path('delete_exercise', {'id': seance.id, 'exercice': exercice.id}) }}"
                    class="btn btn-dark btn-sm">
