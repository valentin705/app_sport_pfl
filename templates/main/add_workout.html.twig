{% extends 'base.html.twig' %}

{% block title %}Ajouter une seance{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="{{ asset('css/ajout.css') }}">
{% endblock %}

{% block body %}

<div class="container mt-6">
    <div class="row">
        <div class="col-11">
            <h5 class="mx-5">Ajouter une seance :</h5>
            <div class="card p-4 mb-3">
                <div class="card-body">

                    {{ form_start(formSeance) }}
                    {{ form_row(formSeance.name) }}
                    {{ form_row(formSeance.picture) }}
                    {{ form_row(formSeance.description)}}
                    <div class="d-flex">
                        {% for choice in formSeance.categories %}
                        <div class="form-check mx-1">
                            {{ form_widget(choice, {'attr': {'class': 'form-check-input'}}) }}
                            {{ form_label(choice) }}
                        </div>
                        {% endfor %}
                    </div>
                    {# {{ form_row(formSeance.categories) }} #}
                    {# , {'attr': {'class': 'form-check-label'}} #}

                    {% for exercice in formSeance.exercices %}
                    <div class="card p-4 mb-3 exercice-form">
                        <div class="card-body">
                            {{ form_row(exercice.name) }}
                            {{ form_row(exercice.picture) }}
                            {{ form_row(exercice.description)}}
                            {{ form_row(exercice.serie) }}
                            {{ form_row(exercice.repetition) }}
                            {{ form_row(exercice.temps) }}
                            {{ form_row(exercice.recuperation) }}
                        </div>
                        {% endfor %}
                    </div>

                </div>
                {# <button type="submit" class="btn btn-primary mt-2">Ajouter un exercice</button> #}
                <button type="submit" class="btn btn-primary mt-2" name="route" value="ajouter">Ajouter un
                    exercice</button>
                <button type="submit" class="btn btn-primary mt-2" name="route" value="finir">Finir ma s√©ance</button>
            </div>
            {{ form_end(formSeance) }}
            <div class="card p-2 col-1">
                <button id="add" class="btn btn-secondary my-3">+</button>
                <button id="remove" class="btn btn-secondary my-3">-</button>
            </div>
        </div>
    </div>
    <div id="content">

    </div>

    {% endblock %}

    {% block javascripts %}
    {{ parent() }}
    {% endblock %}