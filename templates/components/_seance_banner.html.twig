{% set seancePicture = asset('uploads/picturesSeances/' ~ seance.pictureFile) %}
<h2 class="name-seance" style="text-align: center;">{{ seance.name }}</h2>
<div class="seance-card-parent" style="background-image: url('{{ seancePicture }}');">
    <div class="card p-4 mb-3 seance-card">
        <p class="date mb-3">{{ seance.createAt | date('d/m/Y') }}</p>
        <div class="d-flex justify-content-between">
            <div style="flex: auto;">
                <h5>Description :</h5>
                <p class="px-3 description description-5"> {{ seance.description }} </p>
            </div>
            <div class="mx-3" style="flex: none;">
                <h6>Categories :</h6>
                <ul class="list">
                    {% for categorie in seance.categories %}
                    <li>{{ categorie.name }}</li>
                    {% endfor %}
                </ul>
            </div>
            <div class="d-flex flex-column align-items-end">
                <div class="d-flex flex-column align-items-end">
                    <div class="d-flex align-items-center">
                        <div class="p-2">
                            <a href="{{ path('app_likes', {'id': seance.id})}}">
                                {% include "components/_likesDislikes.html.twig" %}
                            </a>
                        </div>
                        <p class="m-0">{{ seance.likes | length}}</p>
                    </div>
                    <div class="d-flex align-items-center">
                        <div class="p-2">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                class="bi bi-chat" viewBox="0 0 16 16">
                                <path
                                    d="M2.678 11.894a1 1 0 0 1 .287.801 10.97 10.97 0 0 1-.398 2c1.395-.323 2.247-.697 2.634-.893a1 1 0 0 1 .71-.074A8.06 8.06 0 0 0 8 14c3.996 0 7-2.807 7-6 0-3.192-3.004-6-7-6S1 4.808 1 8c0 1.468.617 2.83 1.678 3.894zm-.493 3.905a21.682 21.682 0 0 1-.713.129c-.2.032-.352-.176-.273-.362a9.68 9.68 0 0 0 .244-.637l.003-.01c.248-.72.45-1.548.524-2.319C.743 11.37 0 9.76 0 8c0-3.866 3.582-7 8-7s8 3.134 8 7-3.582 7-8 7a9.06 9.06 0 0 1-2.347-.306c-.52.263-1.639.742-3.468 1.105z" />
                            </svg>
                        </div>
                        <p class="m-0">{{ seance.comments | length}} </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>