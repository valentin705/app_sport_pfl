<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon"
        href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    {% endblock %}

    {% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    <script src="{{ asset('js/main.js') }}"></script>
    {% endblock %}
</head>

<body>
    <!-- Main Navigation -->
    <nav>
        <div class="nav-left">
            <div class="img-crop">
                <img src="{{ asset('images/SportNetLogo.png')}}" alt="" id="logo">
            </div>
            {% if app.user is not null %}
            <a href="{{ path('liste_seances') }}" class="nav-item">Acceuil</a>
        </div>
        <div>
            <a href="{{ path('liste_seances') }}" class="nav-item">Mon profil</a>
            <a href="{{ path('liste_seances') }}" class="nav-item">Recherche</a>
            <a href="{{ path('app_logout') }}" class="nav-item">Déconnection</a>
        </div>
        {% else %}
        <a href="{{ path('app_login') }}" class="nav-item">Acceuil</a>
        </div>
        <div>
            <a href="{{ path('app_register') }}" class="nav-item">Inscription</a>
            <a href="{{ path('app_login') }}" class="nav-item">Connexion</a>
        </div>
        {% endif %}
    </nav>

    {% block body %}{% endblock %}
</body>

</html>